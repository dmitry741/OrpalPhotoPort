@model IEnumerable<WebOrpalPhotoPort.Models.User>
@{
    ViewBag.Title = "Home";
}

<h2>Список пользователей</h2>

<table class="table">
    <tr>
        <td><b>Дата</b></td>
        <td><b>Имя</b></td>
        <td><b>Email</b></td>
        <td><b>Логин</b></td>
        <td><b>Пароль</b></td>
        <td><b>Роль</b></td>
        <td><b>Статус</b></td>
        <td></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RegDateTime</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
            <td>@item.Role</td>
            <td>@item.ActiveStatus</td>
            <td><a href="@Url.Action("EditUser", new { id = @item.id })">Редактировать</a></td>
            <td><a href="@Url.Action("RemoveUserAt", new { id = @item.id })">Удалить</a></td>
        </tr>
    }
</table>

<br />
<a class="btn btn-success" href="@Url.Action("AddUser")" role="button">Добавить пользователя</a>

<br />
<br />
@if (!string.IsNullOrEmpty(ViewBag.errorMessage))
{
    <div class="alert alert-danger" role="alert" width="80%">@ViewBag.errorMessage</div>
}


